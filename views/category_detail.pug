extends layout

block content

  h1 Category: #{category.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Furniture
    if category_furniture.length
      dl
        each furniture in category_furniture
          dt
            a(href=furniture.url) #{furniture.name}
          dd $#{furniture.price}
    else
      p This category has no furniture.

    hr
    p
      a(href=category.url+'/delete') Delete category
    p
      a(href=category.url+'/update') Update category
