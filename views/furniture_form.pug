extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#furniture_name.form-control(type='text', placeholder='Name of furniture' name='name' required value=(undefined===furniture ? '' : furniture.name) )
    div.form-group
      label(for='category') Category:
      select#category.form-control(name='category' required)
        option(value='') --Please select a category--
        for category in categories
          if furniture
            if category._id.toString() === furniture.category[0]._id.toString()
              option(value=category._id selected) #{category.name}
            else
              option(value=category._id) #{category.name}
          else
            option(value=category._id) #{category.name}
    div.form-group
      label(for='summary') Price:
      input#price.form-control(placeholder='Enter price' name='price' required value= undefined===furniture ? '' : furniture.price)
    div.form-group
      label(for='summary') Number in Stock:
      input#number_in_stock.form-control(placeholder='Enter number in stock' name='number_in_stock' required value= undefined===furniture ? '' : furniture.number_in_stock)
    div.form-group
      label(for='name') Description:
      textarea#description.form-control(type='text', placeholder='Description of furniture' name='description' required value=(undefined===furniture ? '' : furniture.description) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
