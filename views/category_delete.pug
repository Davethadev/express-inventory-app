extends layout

block content

  h1 #{title}: #{category.name}

  if category_furniture.length

    p #[strong Delete the following furniture before attempting to delete this category.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Categories
      dl
        each furniture in category_furniture
          dt
            a(href=furniture.url) #{furniture.name}
          dd $#{furniture.price}

  else
    p Do you really want to delete this category?

    form(method='POST')
      div.form-group
        input#id.form-control(type='hidden', name='id', value=category._id )

      button.btn.btn-primary(type='submit') Delete
